{% extends 'diskapp.html.twig' %}

{% block main %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.email, {
            label: 'Email'
        }) }}
        <a class="my-3 d-block font-weight-bold" href="/conditions" target="blank">Consulter les conditions générales d'utilisation (CGU)</a>

        {{ form_row(registrationForm.agreeTerms) }}
        <button type="submit" class="btn btn-success text-white">Inscription</button>
    {{ form_end(registrationForm) }}

    <div class="w-100 justify-content-end my-3 d-flex align-items-baseline">Vous avez déjà un compte ?<a class="btn btn-info mx-3" href="/login">Connexion</a></div> 
{% endblock %}
